<h1>Confirmation Page</h1>

<% for lineitem in @order.line_items %>
  <%= lineitem.quantity %> x <%= lineitem.name %> @ <%= number_to_currency lineitem.price %>
<% end %>

<p>Total: <%= number_to_currency @order.total_price %></p>
<p><%= pluralize(@order.total_items, "item") %></p>

<% semantic_form_for @payment do |f| %>
  <%= f.input :name %>
  <%= f.input :number, :label => "Credit Card Number" %>
  <%= f.input :month %>
  <%= f.input :year %>
  <%= f.input :verification_value %>
  <p><%= f.input "Confirm", :disable_with => "Processing" %> or <%= link_to "Back to Order", order_path(@order) %></p>
<% end %>